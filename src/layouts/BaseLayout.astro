---
import "../styles/global.css";
import DarkModeToggle from "../components/DarkModeToggle.astro";

const {
  title = "Amit Kumar Yadav - Senior QA Engineer, Poet & Storyteller",
  description = "Personal website of Amit Kumar Yadav - Senior QA Engineer with expertise in software testing, quality assurance, and automation. Sharing poems, technical insights, and life experiences.",
  image = "/og-image.jpg",
  url = Astro.url.href,
  type = "website"
} = Astro.props;

const siteUrl = "https://amitkyadav.com";
const ogImage = new URL(image, siteUrl).href;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Amit Kumar Yadav" />
    <meta name="keywords" content="Amit Kumar Yadav, QA Engineer, Software Testing, Quality Assurance, Poetry, Hindi Poems, Technical Blog, Test Automation" />

    <!-- Canonical URL -->
    <link rel="canonical" href={url} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Amit Kumar Yadav" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="Amit Kumar Yadav RSS Feed" href="/rss.xml" />
  </head>
  <body class="flex flex-col min-h-screen bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100 transition-colors duration-300">
    
    <!-- Navbar -->
    <header class="bg-white dark:bg-gray-800 shadow-md sticky top-0 z-50 transition-colors duration-300">
      <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
        
        <!-- Logo -->
        <a href="/" class="text-2xl font-bold text-indigo-600 dark:text-indigo-400 hover:opacity-80 transition">
          amitkyadav.com
        </a>
        
        <!-- Navigation Links -->
        <ul class="hidden md:flex space-x-6 text-gray-700 dark:text-gray-200">
          <li><a href="/" class="hover:text-indigo-500 dark:hover:text-indigo-400">Home</a></li>
          <li><a href="/poet" class="hover:text-indigo-500 dark:hover:text-indigo-400">Poet</a></li>
          <li><a href="/engineer" class="hover:text-indigo-500 dark:hover:text-indigo-400">Engineer</a></li>
          <li><a href="/life" class="hover:text-indigo-500 dark:hover:text-indigo-400">Life</a></li>
          <li><a href="/about" class="hover:text-indigo-500 dark:hover:text-indigo-400">About</a></li>
          <li><a href="/contact" class="hover:text-indigo-500 dark:hover:text-indigo-400">Contact</a></li>
        </ul>

        <!-- Right side actions -->
        <div class="flex items-center space-x-4">
          <DarkModeToggle />
          <!-- Mobile Menu Button -->
          <button
            id="mobile-menu-btn"
            aria-label="Toggle mobile menu"
            aria-expanded="false"
            aria-controls="mobile-menu"
            class="md:hidden p-2 rounded-md bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </nav>

      <!-- Mobile Nav -->
      <nav
        id="mobile-menu"
        role="navigation"
        aria-label="Mobile navigation"
        class="hidden md:hidden bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700"
      >
        <ul class="flex flex-col p-4 space-y-2">
          <li><a href="/" class="block py-2 hover:text-indigo-500 dark:hover:text-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">Home</a></li>
          <li><a href="/poet" class="block py-2 hover:text-indigo-500 dark:hover:text-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">Poet</a></li>
          <li><a href="/engineer" class="block py-2 hover:text-indigo-500 dark:hover:text-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">Engineer</a></li>
          <li><a href="/life" class="block py-2 hover:text-indigo-500 dark:hover:text-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">Life</a></li>
          <li><a href="/about" class="block py-2 hover:text-indigo-500 dark:hover:text-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">About</a></li>
          <li><a href="/contact" class="block py-2 hover:text-indigo-500 dark:hover:text-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded">Contact</a></li>
        </ul>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-1 container mx-auto px-4 py-8">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 dark:bg-gray-950 text-white py-8 mt-8">
      <div class="container mx-auto px-4">
        <!-- Social Links -->
        <div class="flex justify-center space-x-6 mb-6">
          <a
            href="https://github.com/amitkumar-y"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
            class="text-gray-400 hover:text-white transition-colors duration-300"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
          </a>
          <a
            href="https://linkedin.com/in/amit-kumar-y96/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            class="text-gray-400 hover:text-white transition-colors duration-300"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a
            href="https://twitter.com/amit_yadavas"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Twitter"
            class="text-gray-400 hover:text-white transition-colors duration-300"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
            </svg>
          </a>
        </div>

        <!-- Copyright -->
        <div class="text-center text-sm text-gray-400">
          <p>© {new Date().getFullYear()} Amit Kumar Yadav — Built with Astro & TailwindCSS</p>
        </div>
      </div>
    </footer>

    <!-- Mobile menu toggle script -->
    <script is:inline>
      const btn = document.getElementById("mobile-menu-btn");
      const menu = document.getElementById("mobile-menu");
      btn.addEventListener("click", () => {
        const isHidden = menu.classList.toggle("hidden");
        btn.setAttribute("aria-expanded", !isHidden);
      });
    </script>

  </body>
</html>
